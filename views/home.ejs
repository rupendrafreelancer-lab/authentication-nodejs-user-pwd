<!DOCTYPE html>
<html>
  <%- include('common/head') %>
  <body>
    <%- include('common/header') %>
    <main>
      <h2>Home Page</h2>
      <% if(isAuthenticated) { %>
      <div>
        <form method="POST" action="/url">
          <label for="redirectURL">
            <span>Enter your original url</span>
            <input id="redirectURL" type="text" name="url" placeholder="http://example.com" />
          </label>
          <button type="submit">Submit</button>
        </form>
      </div>
      <% } %>
      <br />
      <% if(urls) { %>
      <table>
        <thead>
          <th>S.No.</th>
          <th>ShortId</th>
          <th>Redirect Url</th>
          <th>Clicks</th>
        </thead>
        <tbody>
          <% urls.forEach((url, index) => { %>
          <tr>
            <td><%- index+1 %></td>
            <td><a target="_blank" href="/url/<%- url.shortId %>"><%- url.shortId %></a></td>
            <td><%- url.redirectURL %></td>
            <td><%- url.visitorClicks.length %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } %>
    </main>
    <%- include('common/footer') %>
  </body>
</html>
